<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".hightechitempage.ItemDetails">
    <ImageView
        android:id="@+id/image_view_qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/type"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:visibility="gone"
        android:textSize="18sp"
        android:hint="Type"/>

    <TextView
        android:id="@+id/text_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/model"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:visibility="gone"
        android:textSize="18sp"
        android:hint="Model"/>
    <TextView
        android:id="@+id/text_ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/ref"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:visibility="gone"
        android:textSize="18sp"
        android:hint="Ref"/>
    <TextView
        android:id="@+id/text_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:textColor="@color/black"
        android:onClick="toLink"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/link"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:visibility="gone"
        android:textSize="18sp"
        android:hint="Link"/>

    <TextView
        android:id="@+id/text_isAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/modifyButtonId"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:clickable="false"
            android:onClick="modifyButton"
            android:text="Modifier"
            android:textColor="@color/white"
            android:visibility="invisible"
            tools:ignore="Suspicious0dp"
            android:background="@color/purple_500"/>

        <Button
            android:id="@+id/deleteButtonId"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:clickable="false"
            android:onClick="deleteButton"
            android:text="Supprimer appareil"
            android:textColor="@color/white"
            android:visibility="invisible"
            tools:ignore="Suspicious0dp"
            android:background="@color/purple_500"/>
    </LinearLayout>

    <Button
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="Valider"
        android:visibility="invisible"
        android:clickable="false"
        android:textColor="@color/white"
        android:id="@+id/validateButtonId"
        android:onClick="validateButton"
        tools:ignore="Suspicious0dp"/>

</LinearLayout>